{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "04CC - API#1445 Post Create PSA or PSP Association  Request Schema",
  "description": "04CC - API#1445 Post Create PSA or PSP Association Request Schema",
  "type": "object",
  "oneOf": [
    {
      "type": "object",
      "properties": {
        "psaAssociationIDsDetails": {
          "type": "object",
          "properties": {
            "inviteeIDType": {
              "type": "string",
              "description": "invitee IDType",
              "enum": [
                "PSAID"
              ]
            },
            "inviteeIDNumber": {
              "type": "string",
              "pattern": "^A[0-9]{7}$"
            },
            "inviterPSAID": {
              "type": "string",
              "pattern": "^A[0-9]{7}$"
            }
          },
          "required": [
            "inviteeIDType",
            "inviteeIDNumber",
            "inviterPSAID"
          ],
          "additionalProperties": false
        },
        "psaDeclarationDetails": {
          "$ref": "#/definitions/psaDeclarationDetailsType"
        }
      },
      "required": [
        "psaAssociationIDsDetails",
        "psaDeclarationDetails"
      ],
      "additionalProperties": false
    },
    {
      "type": "object",
      "properties": {
        "pspAssociationIDsDetails": {
          "type": "object",
          "properties": {
            "inviteeIDType": {
              "type": "string",
              "description": "invitee IDType",
              "enum": [
                "PSPID"
              ]
            },
            "inviteeIDNumber": {
              "type": "string",
              "pattern": "^[0|1|2]{1}[0-9]{7}$"
            },
            "inviterPSAID": {
              "type": "string",
              "pattern": "^A[0-9]{7}$"
            },
            "clientReference": {
              "type": "string",
              "description": "for an inviteeIDType of PSPID, the clientReference is optional.",
              "minLength": 1,
              "maxLength": 11
            }
          },
          "required": [
            "inviteeIDType",
            "inviteeIDNumber",
            "inviterPSAID"
          ],
          "additionalProperties": false
        },
        "pspDeclarationDetails": {
          "$ref": "#/definitions/pspDeclarationDetailsType"
        }
      },
      "required": [
        "pspAssociationIDsDetails",
        "pspDeclarationDetails"
      ],
      "additionalProperties": false
    }
  ],
