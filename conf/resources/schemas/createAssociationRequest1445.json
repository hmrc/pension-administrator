            "box3": {
              "type": "boolean"
            },
            "box4": {
              "type": "boolean"
            },
            "box6": {
              "type": "boolean",
              "description": "if box6 is true then pensionAdviserDetails is Mandatory and box5 is not applicable",
              "enum": [
                true
              ]
            },
            "pensionAdviserDetails": {
              "type": "object",
              "properties": {
