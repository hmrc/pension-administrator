        "box5": {
          "type": "boolean"
        },
        "box6": {
          "type": "boolean"
        },
        "box7": {
          "type": "boolean"
        },
        "pensionAdvisorDetail": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "pattern": "^[a-zA-Z &?*()\u005F\u00C0-\u00FF '‘’\u2014\u2013\u2010\u002d]{1,255}$"
            },
            "addressDetail": {
              "$ref": "#/definitions/addressType"
            },
            "contactDetail": {
              "$ref": "#/definitions/contactDetailType"
            }
          },
          "additionalProperties": false,
          "required": [
            "name",
            "addressDetail",
            "contactDetail"
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "box1",
        "box2",
        "box3",
        "box4",
        "box7"
      ]
    },
