{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "04CC - API#1358 Pension Scheme Administrator Subscription- Request Schema",
  "type": "object",
  "properties": {
    "customerType": {
      "type": "string",
      "enum": [
        "UK",
        "NON-UK"
      ]
    },
    "legalStatus": {
      "type": "string",
      "enum": [
        "Individual",
        "Partnership",
        "Limited Company"
      ]
    },
    "idType": {
      "type": "string",
      "description": "For Individual - NINO, for Limited Company - UTR (CT UTR), for Partnership - UTR (SA UTR)",
      "enum": [
        "NINO",
        "UTR"
      ]
    },
    "idNumber": {
      "type": "string",
      "description": " NINO or UTR (CT UTR or SA UTR) value",
      "pattern": "^[A-Za-z0-9]{8,15}$"
    },
    "sapNumber" :{
      "type": "string",
      "description": " Identifier to get subscription id",
      "pattern": "^[A-Za-z0-9]{1,255}$"
    },
    "noIdentifier": {
      "description": "true for NON-UK customer and false for UK customer",
      "type": "boolean"
    },
    "organisationDetail": {
      "description": "Only required when legalStatus field is selected Limited Company",
      "$ref": "#/definitions/organisationDetailType"
    },
    "individualDetail": {
      "description ": "Only required when legalStatus field is selected Individual",
      "$ref": "#/definitions/individualDetailType"
    },
    "pensionSchemeAdministratoridentifierStatus": {
      "$ref": "#/definitions/pensionSchemeAdministratoridentifierStatusType"
    },
    "correspondenceAddressDetail": {
      "$ref": "#/definitions/addressType"
    },
    "correspondenceContactDetail": {
      "$ref": "#/definitions/contactDetailType"
    },
    "previousAddressDetail": {
      "$ref": "#/definitions/previousAddressDetailType"
    },
    "numberOfDirectorOrPartners": {
      "$ref": "#/definitions/numberOfDirectorOrPartnersType"
    },
    "directorOrPartnerDetail": {
      "$ref": "#/definitions/directorOrPartnerDetailType"
    },
    "declaration": {
      "$ref": "#/definitions/pensionSchemeAdministratorDeclarationType"
    }
  },
  "required": [
    "customerType",
    "legalStatus",
    "sapNumber" ,
    "noIdentifier",
    "pensionSchemeAdministratoridentifierStatus",
    "correspondenceAddressDetail",
    "correspondenceContactDetail",
    "previousAddressDetail",
    "declaration"
  ],
  "additionalProperties": false,
  "definitions": {
    "addressType": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "addressType": {
              "type": "string",
              "enum": [
                "NON-UK"
              ]
            },
            "line1": {
              "$ref": "#/definitions/AddressLineType"
            },
            "line2": {
              "$ref": "#/definitions/AddressLineType"
            },
            "line3": {
              "$ref": "#/definitions/AddressLineType"
            },
            "line4": {
              "$ref": "#/definitions/AddressLineType"
            },
            "postalCode": {
              "description": "This is populated if the address supplied is a NON-UK address.",
              "type": "string",
              "minLength": 1,
              "maxLength": 10
            },
            "countryCode": {
              "$ref": "#/definitions/countryCodes"
            }
          },
          "required": [
            "addressType",
            "line1",
            "line2",
            "countryCode"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "addressType": {
              "type": "string",
              "enum": [
                "UK"
              ]
            },
            "line1": {
              "$ref": "#/definitions/AddressLineType"
            },
            "line2": {
              "$ref": "#/definitions/AddressLineType"
            },
            "line3": {
              "$ref": "#/definitions/AddressLineType"
            },
            "line4": {
              "$ref": "#/definitions/AddressLineType"
            },
            "postalCode": {
              "description": "This is populated if the address supplied is a UK address.",
              "type": "string",
              "pattern": "^[A-Za-z]{1,2}[0-9][0-9A-Za-z]?\\s?[0-9][A-Za-z]{2}$"
            },
            "countryCode": {
              "$ref": "#/definitions/countryCodes"
            }
          },
          "required": [
            "addressType",
            "line1",
            "line2",
            "countryCode",
            "postalCode"
          ],
          "additionalProperties": false
        }
      ]
    },
    "AddressLineType": {
      "type": "string",
      "minLength": 1,
      "maxLength": 35,
      "pattern": "^[A-Za-z0-9 !'‘’\"“”(),./\u2014\u2013\u2010\u002d]{1,35}$"
    },
    "contactDetailType": {
      "type": "object",
      "properties": {
        "telephone": {
          "type": "string",
          "pattern": "^[0-9 ()+--]{1,24}$"
        },
        "mobileNumber": {
          "type": "string",
          "pattern": "^[0-9 ()+--]{1,24}$"
        },
        "fax": {
          "type": "string",
          "pattern": "^[0-9 ()+--]{1,24}$"
        },
        "email": {
          "type": "string",
          "maxLength": 132,
          "format": "email"
        }
      },
      "additionalProperties": false,
      "required": [
        "telephone",
        "email"
      ]
    },
    "organisationDetailType": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9\u00C0-\u00FF !#$%&'‘’\"“”«»()*+,./:;=?@\\[\\]|~£€¥\\u005C\u2014\u2013\u2010\u005F\u005E\u0060\u002d]{1,160}$"
        },
        "crnNumber": {
          "type": "string",
          "pattern": "^[A-Za-z0-9 -]{7,8}$"
        },
        "vatRegistrationNumber": {
          "type": "string",
          "pattern": "^[0-9]{1,9}$"
        },
        "payeReference": {
          "type": "string",
          "pattern": "^[0-9]{3}[0-9A-Za-z]{1,13}$"
        }
      },
      "additionalProperties": false
    },
    "individualDetailType": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "enum": [
            "Mr",
            "Mrs",
            "Miss",
            "Ms",
            "Dr",
            "Sir",
            "Professor",
            "Lord"
          ]
        },
        "firstName": {
          "type": "string",
          "pattern": "^[a-zA-Z &`\\-\\'\\.^]{1,35}$"
        },
        "middleName": {
          "type": "string",
          "pattern": "^[a-zA-Z &`\\-\\'\\.^]{1,35}$"
        },
        "lastName": {
          "type": "string",
          "pattern": "^[a-zA-Z &`\\-\\'\\.^]{1,35}$"
        },
        "dateOfBirth": {
          "type": "string",
          "pattern": "^(((19|20)([2468][048]|[13579][26]|0[48])|2000)[-]02[-]29|((19|20)[0-9]{2}[-](0[469]|11)[-](0[1-9]|1[0-9]|2[0-9]|30)|(19|20)[0-9]{2}[-](0[13578]|1[02])[-](0[1-9]|[12][0-9]|3[01])|(19|20)[0-9]{2}[-]02[-](0[1-9]|1[0-9]|2[0-8])))$"
        }
      },
      "additionalProperties": false,
      "required": [
        "firstName",
        "lastName",
        "dateOfBirth"
      ]
    },
    "pensionSchemeAdministratoridentifierStatusType": {
      "type": "object",
      "properties": {
        "isExistingPensionSchemaAdministrator": {
          "type": "boolean"
        },
        "existingPensionSchemaAdministratorReference": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9]{8}$"
        }
      },
      "additionalProperties": false,
      "required": [
        "isExistingPensionSchemaAdministrator"
      ]
    },
    "previousAddressDetailType": {
      "type": "object",
      "properties": {
        "isPreviousAddressLast12Month": {
          "type": "boolean"
        },
        "previousAddressDetail": {
          "$ref": "#/definitions/addressType"
        }
      },
      "additionalProperties": false,
      "required": [
        "isPreviousAddressLast12Month"
      ]
    },
    "numberOfDirectorOrPartnersType": {
      "type": "object",
      "properties": {
        "isMorethanTenDirectors": {
          "type": "boolean"
        },
        "isMorethanTenPartners": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "directorOrPartnerDetailType": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "properties": {
          "sequenceId": {
            "type": "string",
            "pattern": "^[0-9]{3}$"
          },
          "entityType": {
            "type": "string",
            "enum": [
              "Director",
              "Partner"
            ]
          },
          "title": {
            "type": "string",
            "enum": [
              "Mr",
              "Mrs",
              "Miss",
              "Ms",
              "Dr",
              "Sir",
              "Professor",
              "Lord"
            ]
          },
          "firstName": {
            "type": "string",
            "pattern": "^[a-zA-Z &`\\-\\'\\.^]{1,35}$"
          },
          "middleName": {
            "type": "string",
            "pattern": "^[a-zA-Z &`\\-\\'\\.^]{1,35}$"
          },
          "lastName": {
            "type": "string",
            "pattern": "^[a-zA-Z &`\\-\\'\\.^]{1,35}$"
          },
          "dateOfBirth": {
            "type": "string",
            "pattern": "^(((19|20)([2468][048]|[13579][26]|0[48])|2000)[-]02[-]29|((19|20)[0-9]{2}[-](0[469]|11)[-](0[1-9]|1[0-9]|2[0-9]|30)|(19|20)[0-9]{2}[-](0[13578]|1[02])[-](0[1-9]|[12][0-9]|3[01])|(19|20)[0-9]{2}[-]02[-](0[1-9]|1[0-9]|2[0-8])))$"
          },
          "referenceOrNino": {
            "type": "string",
            "pattern": "(^[0-9a-zA-Z]{1,9}|((?!(BG|GB|KN|NK|NT|TN|ZZ)|(D|F|I|Q|U|V)[A-Z]|[A-Z](D|F|I|O|Q|U|V))[A-Z]{2})[0-9]{6}[A-D]?)$"
          },
          "noNinoReason": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9\u00C0-\u00FF !#$%&'‘’\"“”«»()*+,./:;=?@\\[\\]|~£€¥\\u005C\u2014\u2013\u2010\u005F\u005E\u0060\u002d]{1,160}$"
          },
          "utr": {
            "type": "string",
            "pattern": "^[0-9]{10}$"
          },
          "noUtrReason": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9\u00C0-\u00FF !#$%&'‘’\"“”«»()*+,./:;=?@\\[\\]|~£€¥\\u005C\u2014\u2013\u2010\u005F\u005E\u0060\u002d]{1,160}$"
          },
          "correspondenceCommonDetail": {
            "type": "object",
            "properties": {
              "addressDetail": {
                "$ref": "#/definitions/addressType"
              },
              "contactDetail": {
                "$ref": "#/definitions/contactDetailType"
              }
            },
            "additionalProperties": false,
            "required": [
              "addressDetail",
              "contactDetail"
            ]
          },
          "previousAddressDetail": {
            "$ref": "#/definitions/previousAddressDetailType"
          }
        },
        "additionalProperties": false,
        "required": [
          "sequenceId",
          "entityType",
          "firstName",
          "lastName",
          "dateOfBirth"
        ]
      }
    },
    "pensionSchemeAdministratorDeclarationType": {
      "type": "object",
      "properties": {
        "box1": {
          "type": "boolean"
        },
        "box2": {
          "type": "boolean"
        },
