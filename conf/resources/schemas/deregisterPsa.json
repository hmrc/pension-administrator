{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "API#1469 Deregistration Request Schema v1.0.0",
  "description": "API#1469 Deregistration Request Schema v1.0.0",
  "type": "object",
  "properties": {
    "deregistrationDate": {
      "type": "string",
      "pattern": "^(((19|20)([2468][048]|[13579][26]|0[48])|2000)[-]02[-]29|((19|20)[0-9]{2}[-](0[469]|11)[-](0[1-9]|1[0-9]|2[0-9]|30)|(19|20)[0-9]{2}[-](0[13578]|1[02])[-](0[1-9]|[12][0-9]|3[01])|(19|20)[0-9]{2}[-]02[-](0[1-9]|1[0-9]|2[0-8])))$",
      "description": "Deregistration Date (CCYY-MM-DD)"
    },
    "reason": {
      "type": "string",
      "pattern": "^[1-2]$",
      "description": "Deregistration reason. 1   -  Deregistered, 2   -  Wound-up"
    },
    "reasonDescription": {
      "type": "string",
      "pattern": "^[A-Za-z0-9 &!'‘’\"“”(),./\u2014\u2013\u2010\u002d]{1,35}$",
      "description": "Deregistration reason description \u2014 for — (EM DASH), \u2013 for –   (EN DASH), \u2010 for -(HYPHEN), \u002d for -(HYPHEN_MINUS)"
    }
  },
  "required": [
    "deregistrationDate",
    "reason"
  ],
  "additionalProperties": false
}
